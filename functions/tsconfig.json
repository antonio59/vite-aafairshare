{
  "compilerOptions": {
    "module": "CommonJS", // Change module type
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Often helpful with esModuleInterop
    "moduleResolution": "node", // Change resolution strategy
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".", // Add baseUrl
    "paths": {      // Add paths mapping
      "shared": ["../shared"] // Point to source relative to baseUrl
    },
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
