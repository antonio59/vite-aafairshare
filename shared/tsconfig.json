{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "composite": true,
    "declaration": true,
    "rootDir": ".",
    "types": []
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "dist"
  ]
} 